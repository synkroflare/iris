// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Store {
  id      Int       @id @default(autoincrement())
  name    String    @unique  
  email   String    @unique 
  phone   Int      
  siteUrl String   @unique
  lastPayment DateTime?
  plan    String?
  reviews Review[]
  users User[]
}

model User {
  id      Int      @id @default(autoincrement())
  idInStore Int
  storeId Int
  firstName    String
   lastName    String  
  email   String?   @unique 
  phoneNumber String? @unique 
  image String?

  reviews Review[]  
  store Store @relation(fields: [storeId], references: [id])

}

model Review {
    id      String      @id @default(uuid())
    storeId Int
    reviewIdInStore Int
    userId Int
    userFirstName String
    userLastName String?
    userCity String
    userState String
    userMail String
    userPhone String
    productId String
    productInfo String
    productImageUrl String
    rating  Int?
    message String?
    shopkeeperComment String?
    images  String[]

    statusCreated Boolean @default(true)
    statusSent Boolean  @default(false)
    statusResponded Boolean  @default(false)
    statusRejected Boolean  @default(false)
    statusApproved Boolean  @default(false)
    statusTrashed Boolean  @default(false)
    statusCommented Boolean @default(false)

    user User @relation(fields: [userId], references: [id])
    store Store @relation(fields: [storeId], references: [id])

    createdAt DateTime @default(now())
    
}
